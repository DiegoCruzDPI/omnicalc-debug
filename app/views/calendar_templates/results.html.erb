<form action="/calendar_invite/results">
  <div>
    <label for="first_name">Name</label>
    <input type="text" name="name" id="first_name">
  </div>
  <div>
    <label for="deets">Details</label>
    <input type="text" name="details" id="deets">
  </div>
  <div>
    <label for="loc">Location</label>
    <input type="text" name="event_location" id="loc">
  </div>
  <div>
    <label for="start_time">Start time</label>
    <input type="datetime-local" name="start_date" id="start_time">
  </div>
  <div>
    <label for="end_time">End time</label>
    <input type="datetime-local" name="end_date" id="end_time">
  </div>
  <button>Generate</button>
</form>

<h1>Event URL</h1>
<div>
  <a href="<%= @invite %>">Invitation</a>
</div>

<h2>Copy me</h2>
<textarea cols="80" rows="5"><%= @invite %></textarea>
